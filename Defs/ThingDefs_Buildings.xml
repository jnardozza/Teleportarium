<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <thingClass>Teleportarium.Building_TeleportariumPlatform</thingClass>
    <defName>TeleportariumPlatform</defName>
    <label>teleportarium platform</label>
    <description>A mysterious platform capable of teleporting pawns to distant locations. Requires massive power to operate.</description>
    <graphicData>
      <texPath>Things/Building/Misc/TeleportariumPlatform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>3</drawSize>
      <drawRotated>false</drawRotated>
      <drawOffset>(0,0,-0.05)</drawOffset>
      <shadowData>
        <volume>(2.5, 0.4, 2.5)</volume>
        <offset>(0,0,-0.12)</offset>
      </shadowData>
    </graphicData>
    <costList>
      <Steel>300</Steel>
      <ComponentSpacer>5</ComponentSpacer>
      <Plasteel>100</Plasteel>
      <AdvancedComponent>2</AdvancedComponent>
    </costList>
    <building>
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>1000</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Flickable"/>
      <li Class="Teleportarium.CompProperties_Teleportarium" />
    </comps>
    <altitudeLayer>Building</altitudeLayer>
    <canBeUsedUnderRoof>false</canBeUsedUnderRoof>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>20000</WorkToBuild>
      <Flammability>0.2</Flammability>
      <Beauty>-20</Beauty>
    </statBases>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0,0,2)</interactionCellOffset>
    <interactionCellIcon>DiningChair</interactionCellIcon>
    <interactionCellIconReverse>true</interactionCellIconReverse>
    <fillPercent>0.40</fillPercent>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <designationCategory>Misc</designationCategory>
    <rotatable>true</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <size>(3,3)</size>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <defaultPlacingRot>South</defaultPlacingRot>
    <researchPrerequisites>
      <li>MultiAnalyzer</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <tickerType>Normal</tickerType>
    <minifiable>true</minifiable>
  </ThingDef>
</Defs>
